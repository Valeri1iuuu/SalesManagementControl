                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4"
                            Orientation="Horizontal">
                    <TextBlock Text="Покупатель: "
                               Style="{StaticResource Style1}"/>

                    <TextBlock Text="Димиткин"
                               Margin="0,5,0,0"
                               Style="{StaticResource Style2}"/>

                    <TextBlock Text="Даниил"
                               Margin="0,5,0,0"
                               Padding="10,0"
                               Style="{StaticResource Style2}"/>

                    <TextBlock Text="Дмитриевич"
                               Margin="0,5,0,0"

                               Style="{StaticResource Style2}"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <TextBlock Text="Цена (1 шт): "
                               Style="{StaticResource Style1}"/>

